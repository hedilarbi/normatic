{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(client)/confirm/route.js",
    "app/(client)/layout.jsx",
    "app/(client)/update-password/page.jsx",
    "app/(client)/sign-up-success/page.jsx",
    "app/(client)/mot-de-passe-oublie/page.jsx",
    "app/(client)/inscription/page.jsx",
    "app/(client)/error/page.jsx",
    "app/(client)/connexion/page.jsx",
    "context/AuthContext.jsx",
    "app/(client)/page.jsx",
    "app/(dashboard)/layout.jsx",
    "app/(dashboard)/tableau-de-bord/page.jsx",
    "components/dashboard/SettingsConfig.jsx",
    "components/dashboard/ScanMonitoring.jsx",
    "components/dashboard/Regulations.jsx",
    "components/dashboard/CrititcalIssues.jsx",
    "components/dashboard/ComplianceReports.jsx",
    "components/dashboard/ComplianceChart.jsx",
    "components/client/TrustedBy.jsx",
    "components/client/Testimonials.jsx",
    "components/client/DashboardPreview.jsx",
    "components/Problem.jsx",
    "components/HeroSection.jsx",
    "components/HowItWorks.jsx",
    "components/client/Pricing.jsx",
    "components/client/Header.jsx",
    "components/client/Hero.jsx",
    "components/client/Footer.jsx",
    "components/client/Features.jsx",
    "components/dashboard/DashboardHero.jsx",
    "components/client/Faq.jsx",
    "components/dashboard/DashboardHeader.jsx",
    "components/dashboard/Aside.jsx",
    "components/client/Cta.jsx",
    "components/client/AutomatedCorrections.jsx",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
